{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Documentation",
    "description": "This is an API for RentalX",
    "version": "1.0.0",
    "contact": {
      "email": "thiagomev@gmail.com"
    }
  },
  "paths":{
    "/categories":{
      "post":{
        "tags": ["categories"],
        "summary": "Create a category",
        "description": "Create a new category",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type": "object",
                "properties":{
                  "name":{
                    "type": "string"
                  },
                  "description":{
                    "type": "string"
                  }
                },
                "example":{
                  "name": "category name sample",
                  "description": "category description sample"
                }
              }
            }
          }
        },
        "response": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      }
    }
  }
}